<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane fx:controller="homepage.Controller"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/styles/dartk_metro_style.css"
>



    <left>


        <VBox>
            <TextField fx:id="searchTextField"
                       maxWidth="Infinity"
                       alignment="CENTER"
                       promptText="Search"
                       onKeyPressed="#onSearchTextEntered">

                <VBox.margin ><Insets topRightBottomLeft="8"/> </VBox.margin>
                <padding><Insets topRightBottomLeft="4"/> </padding>

            </TextField>

            <ListView VBox.vgrow="ALWAYS"
                      fx:id="itemsList"
                      prefWidth="350"
                      onKeyPressed="#onItemsListPressed"
                      onMouseClicked="#onItemsListClicked">

            </ListView>

        </VBox>

    </left>

    <center>

        <VBox >


            <!--Customer Details view Top view -->

            <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">

                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>

                <!--Name input -->
                <!--(0,1)-->
                <Label text="Name" GridPane.rowIndex="0"/>
                <TextField fx:id="nameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

                <!--Phone number input-->
                <!--(1,1)-->
                <Label text="Phone Number" GridPane.rowIndex="1" />
                <TextField fx:id="phoneNumberTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

                <!--Address Input-->
                <!--(2,1)-->
                <Label text="Address" GridPane.rowIndex="2" />
                <TextField fx:id="addressTextField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

                <!--Payment Mode-->
                <!--(0,3)-->
                <Label text="Payment Mode" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.halignment="RIGHT"/>
                <!--(0,4)-->
                <ComboBox fx:id="paymentModeComboBox" GridPane.rowIndex="0" GridPane.columnIndex="4" GridPane.halignment="RIGHT"/>

                <!--Invoice Number-->
                <!--(1,3)-->
                <Label text="Invoice Number : " GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.halignment="RIGHT"/>
                <!--(1,4)-->
                <Label fx:id="invoiceNumberLabel" text="21" GridPane.rowIndex="1" GridPane.columnIndex="4" GridPane.halignment="RIGHT"/>

                <!--Date-->
                <!--(2,3)-->
                <Label text="Date: " GridPane.rowIndex="2" GridPane.columnIndex="3" GridPane.halignment="RIGHT" />
                <!--(2,4)-->
                <Label fx:id="dateLabel"  GridPane.rowIndex="2" GridPane.columnIndex="4" GridPane.halignment="RIGHT"/>

                <!--Total Amount-->
                <!--(0,5)-->
                <Label text="Total: " GridPane.rowIndex="0" GridPane.columnIndex="5" GridPane.halignment="RIGHT"/>
                <!--(0,6)-->
                <Label fx:id="totalLabel" GridPane.rowIndex="0" GridPane.columnIndex="6" GridPane.halignment="RIGHT"/>

                <!--GST-->
                <!--(1,5)-->
                <Label text="GST: " GridPane.rowIndex="1" GridPane.columnIndex="5" GridPane.halignment="RIGHT"/>
                <!--(1,6)-->
                <Label fx:id="gstLabel" GridPane.rowIndex="1" GridPane.columnIndex="6" GridPane.halignment="RIGHT"/>

                <!--TOTAL PAYABLE-->
                <!--(2,5)-->
                <Label text="Total Payable: " GridPane.rowIndex="2" GridPane.columnIndex="5" GridPane.halignment="RIGHT"/>
                <!--(2,6)-->
                <Label fx:id="totalPayableLabel" GridPane.rowIndex="2" GridPane.columnIndex="6" GridPane.halignment="RIGHT"/>
            </GridPane>

            <!--Table view orders (Center view)-->
            <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>

                <TableColumn text="Product">
                    <cellValueFactory>
                        <PropertyValueFactory property="manufacturer"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Model">
                    <cellValueFactory>
                        <PropertyValueFactory property="model"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Quantity">
                    <cellValueFactory>
                        <PropertyValueFactory property="quantity"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Rate">
                    <cellValueFactory>
                        <PropertyValueFactory property="rate"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Amount">
                    <cellValueFactory>
                        <PropertyValueFactory property="amount"/>
                    </cellValueFactory>
                </TableColumn>

            </columns>

        </TableView>


            <!-- Bottom view containing print and clear button-->
            <HBox fx:id="bottomView" spacing="20" alignment="BOTTOM_RIGHT" >
                    <padding><Insets topRightBottomLeft="8"/></padding>

                    <!--print button-->
                    <Button fx:id="printButton"
                            text="Print">
                        <graphic>
                            <ImageView>
                                <Image url="/res/print_icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>

                    <!--Clear button-->
                    <Button fx:id="clearButton"
                            text="Clear">
                        <graphic>
                            <ImageView>
                                <Image url="/res/clear_icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>

                </HBox>


        </VBox>

    </center>

</BorderPane>